---
import template from "../../public/example-template.json";

export interface IInfo {
  photo: string;
  name: string;
  address: string;
  phone: string;
  email: string;
  personalUrl: string;
  birthDate: string;
  summary: string;
}

const info: IInfo = template.personalInfo;
const hrefMail = `mailto:${info.email}`;
---

<section class="container mx-auto p-6 rounded-md">
  <div id="info" class="flex justify-around">
    <ul class="inline-grid grid-cols-1 gap-1">
      <li>‚ùî {info.name}</li>
      <li>üì® <a href={hrefMail}>{info.email}</a> &rarr;</li>
      <li>üîó <a href={info.personalUrl}>Linkedin &rarr;</a></li>
      <li>üè† {info.address}</li>
      <li>‚òéÔ∏è {info.phone}</li>
      <li>
        üóìÔ∏è {
          new Date(info.birthDate)
            .toLocaleDateString("ja-JP", {
              year: "numeric",
              month: "2-digit",
              day: "2-digit",
            })
            .replace(/\//gi, "-")
        }
      </li>
    </ul>

    <img
      class="object-contain h-96 w-96 overflow-hidden rounded-full p-6"
      src={info.photo}
      alt="Profile photo"
    />
  </div>
  <hr />
  <div id="summary">
    <p>
      {info.summary}
    </p>
  </div>
  <hr />
</section>

