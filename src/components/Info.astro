---
import template from "../../public/example-template.json";

export interface IInfo {
  photo: string;
  name: string;
  address: string;
  phone: string;
  email: string;
  personalUrl: string;
  birthDate: string;
  summary: string;
}

const info: IInfo = template.personalInfo;
const hrefMail = `mailto:${info.email}`;
---

<section class="container mx-auto p-6 rounded-md">
  <h1>INFORMAZIONI PERSONALI</h1>
  <div class="flex justify-around">
    <ul class="inline-grid grid-cols-1 gap-1">
      <li>❔ {info.name}</li>
      <li>
        📨
        <a href={hrefMail}>{info.email}</a>&rarr;
      </li>
      <li>
        🔗
        <a href={info.personalUrl}>Linkedin</a>&rarr;
      </li>
      <li>🏠 {info.address}</li>
      <li>☎️ {info.phone}</li>
      <!-- <li>
        🗓️ {
          new Date(info.birthDate)
            .toLocaleDateString("ja-JP", {
              year: "numeric",
              month: "2-digit",
              day: "2-digit",
            })
            .replace(/\//gi, "-")
        }
      </li> -->
    </ul>

    <img
      class="object-contain h-96 w-96 overflow-hidden rounded-full p-6"
      src={info.photo}
      alt="Profile photo"
    />
  </div>
  <hr />
  <div>
    <p>
      {info.summary}
    </p>
  </div>
  <hr />
</section>

<style>
  section {
    background-color: var(--color-bg-primary);
    /* TODO remove */
    border: solid;
    border-color: var(--gold);
  }

  h1 {
    font-size: x-large;
    padding-bottom: 1.75rem;
  }

  li {
    font-size: large;
  }

  a {
    cursor: pointer;
    color: var(--blue-600);
  }
</style>
