---
import { log } from "astro/dist/core/logger/core";
import template from "../../public/example-template.json";

export interface ISchool {
  logo: string;
  schoolInstitute: string;
  description: string;
  startDate: string;
  endDate: string;
  notes: string;
}

const school: ISchool[] = template.education;
---

<section class="container mx-auto rounded-md">
  <h1>EDUCAZIONE</h1>
  <ul>
    {
      school.map((school) => (
        <li>
          <div id="school" class="flex flex-row">
            <img
              class="object-scale-down h-8 w-8 rounded"
              src={school.logo}
              alt="School logo"
            />
            <h2>{school.schoolInstitute}</h2>
          </div>
          <div id="details">
            <h3>üë®‚Äçüéì {school.description}</h3>
            <p>
              üóìÔ∏è {school.startDate} / {school.endDate}, {school.notes}
            </p>
          </div>
        </li>
      ))
    }
  </ul>
</section>

<style>
  section {
    background-color: var(--color-bg-primary);
    padding: 2rem;
    /* TODO remove */
    border: solid;
    border-color: var(--gold);
  }

  h1 {
    font-size: x-large;
    padding-bottom: 1.75rem;
  }

  h2 {
    padding-left: 0.75rem;
    font-size: larger;
    font-weight: bold;
  }

  h3 {
    font-size: large;
    padding-bottom: 0.5rem;
